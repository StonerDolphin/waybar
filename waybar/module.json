{
    "hyprland/workspaces": {
        "format": "{}",
        "on-click": "activate",
        "all-outputs": false,
        "format-icons": {
            "urgent": "",
            "default": "",
            "active": ""
        },
        "persistent-workspaces": {
            "*": 5
       }
    },

    "hyprland/window": {
        "rewrite": {
            "(.*) - Brave": "$1"
        },
        "separate-outputs": true

    },
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ÔÅÆ",
            "deactivated": "ÔÅ∞"
        }
    },
    "tray": {
        "icon-size": 20,
        "spacing": 5
    },
    
    "clock": {
        "format": "{:%H:%M %a}",
        "format-alt": "{:%Y-%m-%d}"
    },

    "cpu": {
        "format": "Ôíº   {usage}%",
        "on-click": "alacritty -e htop"
    },
    "memory": {
        "format": "üñ¥ {: >3}%",
        "on-click": "alacritty -e htop"
    },
    "temperature": {
        "critical-threshold": 80,
        "format": "{temperatureC}¬∞C Ôãâ"
    },
    "backlight": {
        "format": "{icon} {percent: >3}%",
